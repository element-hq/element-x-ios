update_fastlane

default_platform(:ios)

platform :ios do
  desc "Lane to build app"
  lane :build do
    UI.important("Starting build process...")
    UI.important("Current directory: #{Dir.pwd}")
    build_ios_app(
        project: "ElementX.xcodeproj",
        scheme: "Zero",
        configuration: "Release",
        output_directory: "build",
        skip_archive: true,
        skip_codesigning: true,
    )
  end
end


